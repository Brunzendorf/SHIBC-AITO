{
  "mcpServers": {
    "telegram": {
      "command": "npx",
      "args": ["-y", "@iqai/mcp-telegram"],
      "env": {
        "TELEGRAM_BOT_TOKEN": "${TELEGRAM_BOT_TOKEN}"
      },
      "description": "Telegram Bot API - send messages, manage channels"
    },
    "etherscan": {
      "command": "npx",
      "args": ["-y", "etherscan-mcp"],
      "env": {
        "ETHERSCAN_API_KEY": "${ETHERSCAN_API_KEY}"
      },
      "description": "Ethereum blockchain data"
    },
    "directus": {
      "command": "npx",
      "args": ["-y", "@directus/content-mcp@latest"],
      "env": {
        "DIRECTUS_URL": "https://directus.shibaclassic.io",
        "DIRECTUS_TOKEN": "${DIRECTUS_TOKEN}"
      },
      "description": "Directus CMS via official @directus/content-mcp"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@agent-infra/mcp-server-filesystem", "--allowed-directories", "/app/workspace", "--allowed-directories", "/app/profiles"],
      "description": "Local filesystem access for workspace and profiles"
    },
    "fetch": {
      "command": "node",
      "args": ["/app/mcp-servers/fetch-validated/dist/index.js"],
      "description": "Domain-validated web fetching (whitelist enforced)",
      "env": {
        "POSTGRES_URL": "${POSTGRES_URL}"
      }
    },
    "imagen": {
      "command": "node",
      "args": ["/app/mcp-servers/imagen-mcp/dist/index.js"],
      "description": "Google Imagen image generation via GenAI API",
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}"
      }
    }
  }
}

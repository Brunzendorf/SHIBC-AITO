{
  "mcpServers": {
    "telegram": {
      "command": "npx",
      "args": ["-y", "@chaindead/telegram-mcp"],
      "description": "Telegram API for messages and channels"
    },
    "etherscan": {
      "command": "npx",
      "args": ["-y", "etherscan-mcp"],
      "description": "Ethereum blockchain data"
    },
    "directus": {
      "command": "npx",
      "args": ["@directus/content-mcp@latest"],
      "description": "Directus CMS via official @directus/content-mcp"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-filesystem", "/app/workspace"],
      "description": "Local filesystem access"
    },
    "fetch": {
      "command": "node",
      "args": ["/app/mcp-servers/fetch-validated/dist/index.js"],
      "description": "Domain-validated web fetching (whitelist enforced)",
      "env": {
        "POSTGRES_URL": "${POSTGRES_URL}"
      }
    },
    "imagen": {
      "command": "node",
      "args": ["/app/mcp-servers/imagen-mcp/dist/index.js"],
      "description": "Provides tools for Google Imagen to list models and generate images via GenAI API.",
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}"
      }
    }
  }
}

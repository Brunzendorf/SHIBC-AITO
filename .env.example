# AITO 2.0 Environment Variables
# Copy to .env and fill in your values

# ============================================
# CORE DATABASE
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aito
POSTGRES_USER=aito
POSTGRES_PASSWORD=your-secure-password

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ============================================
# AI - CLAUDE
# ============================================
# Claude Code CLI: Run `claude auth login` in each container
# API Key only needed for embeddings fallback
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# AI - OLLAMA (Local)
# ============================================
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_URL=http://${OLLAMA_HOST}:${OLLAMA_PORT}

# ============================================
# AI - OPENAI (Embeddings)
# ============================================
OPENAI_API_KEY=sk-...

# ============================================
# BLOCKCHAIN
# ============================================
ETHERSCAN_API_KEY=your-etherscan-key
QUICKNODE_HTTP_URL=https://your-quicknode-endpoint
QUICKNODE_WSS_URL=wss://your-quicknode-websocket
COINGECKO_API_KEY=  # Optional, free tier works

# ============================================
# SOCIAL - TWITTER/X
# ============================================
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ============================================
# SOCIAL - TELEGRAM
# ============================================
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-chat-id

# ============================================
# SOCIAL - DISCORD
# ============================================
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=

# ============================================
# SOCIAL - REDDIT
# ============================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# ============================================
# CMS - DIRECTUS
# ============================================
DIRECTUS_URL=https://directus.shibaclassic.io
DIRECTUS_TOKEN=your-admin-token

# ============================================
# CODE - GITHUB
# ============================================
GITHUB_TOKEN=ghp_...
GITHUB_ORG=og-shibaclassic
GITHUB_REPO=shiba-classic-project

# ============================================
# TRANSLATION - DEEPL
# ============================================
DEEPL_API_KEY=your-deepl-key

# ============================================
# SEARCH - BRAVE
# ============================================
BRAVE_API_KEY=

# ============================================
# EMAIL - SENDGRID
# ============================================
SENDGRID_API_KEY=
ADMIN_EMAIL=admin@shibaclassic.io

# ============================================
# GOVERNANCE
# ============================================
SNAPSHOT_SPACE=shibaclassic.eth
GNOSIS_SAFE_ADDRESS=0x...

# ============================================
# N8N
# ============================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_ENCRYPTION_KEY=your-encryption-key
N8N_WEBHOOK_URL=https://n8n.shibaclassic.io

# ============================================
# ORCHESTRATOR
# ============================================
ORCHESTRATOR_PORT=8080
LOG_LEVEL=info

# ============================================
# AGENT DEFAULTS
# ============================================
DEFAULT_LOOP_INTERVAL=3600
CLAUDE_MODEL=claude-sonnet-4-20250514

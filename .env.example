# AITO 2.0 Environment Variables
# Copy to .env and fill in your values

# ============================================
# OPERATION MODE
# ============================================
# Set to 'true' for dry-run mode (no external actions, everything simulated)
DRY_RUN=false

# ============================================
# CORE DATABASE
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aito
POSTGRES_USER=aito
POSTGRES_PASSWORD=your-secure-password
POSTGRES_URL=postgresql://aito:your-secure-password@localhost:5432/aito

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ============================================
# AI - CLI TOOLS (Feature Flags)
# ============================================
# Control which CLI tools are installed in Docker images
# Set to 'true' to install, 'false' to skip (saves build time & image size)
INSTALL_CLAUDE_CLI=true      # @anthropic-ai/claude-code (recommended!)
INSTALL_GEMINI_CLI=true      # @google/gemini-cli
INSTALL_CODEX_CLI=false      # @openai/codex (requires ChatGPT subscription or API key)

# ============================================
# AI - CLAUDE CODE CLI
# ============================================
# KEINE API KEYS! Wir nutzen Claude Code CLI mit Max Plan ($200/month)
# Auth: `docker exec -it <container> claude auth login` (einmalig)
# Volume: ~/.claude wird persistent gemountet
# Siehe: docs/CLAUDE-CODE-DOCKER.md

# ============================================
# AI - OLLAMA (Lokal für einfache Tasks)
# ============================================
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_URL=http://localhost:11434
# Models: llama3.2:1b, llama3.2:3b, orca-mini, nomic-embed-text

# ============================================
# LLM ROUTING (Claude + Gemini + OpenAI)
# ============================================
LLM_ROUTING_STRATEGY=task-type
LLM_ENABLE_FALLBACK=true
# PREFER GEMINI (SAVE CLAUDE QUOTA!)
LLM_PREFER_GEMINI=false

# Gemini API (Free tier: 1500 requests/day)
# Get your free Gemini API key: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_DEFAULT_MODEL=gemini-2.0-flash-exp
# Optional quota limits (for monitoring)
GEMINI_MONTHLY_QUOTA=10000000

# OpenAI API (Optional - for Codex CLI if not using ChatGPT subscription)
OPENAI_API_KEY=

# Claude uses session windows (5h/7d) - no monthly limit needed

# ============================================
# AI - EMBEDDINGS (für RAG)
# ============================================
# Option 1: Ollama lokal (kostenlos)
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text

# Option 2: OpenAI (falls Ollama nicht reicht)
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=sk-...

# ============================================
# BLOCKCHAIN
# ============================================
ETHERSCAN_API_KEY=your-etherscan-key
QUICKNODE_HTTP_URL=https://your-quicknode-endpoint
QUICKNODE_WSS_URL=wss://your-quicknode-websocket
COINGECKO_API_KEY=  # Optional, free tier works

# ============================================
# SOCIAL - TWITTER/X
# ============================================
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ============================================
# SOCIAL - TELEGRAM
# ============================================
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-chat-id

# ============================================
# SOCIAL - DISCORD
# ============================================
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=

# ============================================
# SOCIAL - REDDIT
# ============================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# ============================================
# CMS - DIRECTUS
# ============================================
DIRECTUS_URL=https://directus.shibaclassic.io
DIRECTUS_TOKEN=your-admin-token

# ============================================
# CODE - GITHUB
# ============================================
GITHUB_TOKEN=ghp_...
GITHUB_ORG=og-shibaclassic

# ============================================
# WORKSPACE GIT REPOSITORY
# ============================================
# Git repo for persistent agent workspace (alternative to volumes)
# Agents clone on start, commit after file changes, push to remote
WORKSPACE_REPO_URL=https://github.com/Brunzendorf/shibc-workspace.git
WORKSPACE_BRANCH=main
WORKSPACE_AUTO_COMMIT=true
# PR Quality Gate: Agents create branches and PRs instead of direct push
# RAG validates content before merge (see events.ts:pr_review_requested)
WORKSPACE_USE_PR=true
# Auto-merge PRs after RAG approval (false = CEO must approve)
WORKSPACE_AUTO_MERGE=false
# BYPASS PR WORKFLOW - Direct push to main (SAVES TOKENS!)
# Use when Claude quota is low - skips PR creation, RAG review, CEO approval
WORKSPACE_SKIP_PR=false

# ============================================
# TRANSLATION - DEEPL
# ============================================
DEEPL_API_KEY=your-deepl-key
# 500k chars/month free tier

# ============================================
# SEARCH - BRAVE
# ============================================
BRAVE_API_KEY=

# ============================================
# EMAIL - SENDGRID
# ============================================
SENDGRID_API_KEY=
ADMIN_EMAIL=admin@shibaclassic.io

# ============================================
# GOVERNANCE
# ============================================
SNAPSHOT_SPACE=shibaclassic.eth
GNOSIS_SAFE_ADDRESS=0x2363c8FA46daF9c090248C6D638f92Cf7cE4bD44

# ============================================
# N8N WORKFLOWS
# ============================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_ENCRYPTION_KEY=your-encryption-key
N8N_WEBHOOK_URL=http://localhost:5678

# ============================================
# ORCHESTRATOR
# ============================================
ORCHESTRATOR_PORT=8080
LOG_LEVEL=info
NODE_ENV=development

# ============================================
# DASHBOARD AUTHENTICATION (Supabase)
# ============================================
# Create a free Supabase project at: https://supabase.com
# Go to Project Settings > API to get these values
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# DOCKER
# ============================================
DOCKER_SOCKET=/var/run/docker.sock

# ============================================
# AGENT DEFAULTS
# ============================================
DEFAULT_LOOP_INTERVAL=3600
HEALTH_CHECK_INTERVAL=30
MAX_VETO_ROUNDS=3

# ============================================
# ESCALATION TIMEOUTS (Sekunden)
# ============================================
ESCALATION_TIMEOUT_CRITICAL=14400   # 4 Stunden
ESCALATION_TIMEOUT_HIGH=43200       # 12 Stunden
ESCALATION_TIMEOUT_NORMAL=86400     # 24 Stunden
